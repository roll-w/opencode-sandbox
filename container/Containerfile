ARG UBUNTU_VERSION=24.04
FROM ubuntu:${UBUNTU_VERSION}

ENV DEBIAN_FRONTEND=noninteractive

# Install base packages
RUN apt-get update \
    && apt-get install -y --no-install-recommends \
        ca-certificates \
        curl \
        wget \
        gnupg \
        lsb-release \
        xdg-utils \
        sudo \
        git \
        jq \
        unzip \
        build-essential \
        openjdk-17-jdk \
        python3 \
        python3-pip \
        python3-venv \
    && rm -rf /var/lib/apt/lists/*

# Install Node.js (LTS) via NodeSource (Node 20/22 family)
RUN curl -fsSL https://deb.nodesource.com/setup_22.x | bash - \
    && apt-get update \
    && apt-get install -y --no-install-recommends nodejs \
    && rm -rf /var/lib/apt/lists/*

RUN npm install -g pnpm@latest \
    && pnpm config set store-dir /home/opencode/.pnpm-store

RUN npm install -g opencode-ai@latest

ARG USER_UID=1001
ARG USER_GID=1001

# Create or reuse group and user matching specified numeric ids.
# This handles the case where the requested UID/GID already exist in the base image.
RUN set -eux; \
    if getent group "${USER_GID}" >/dev/null 2>&1; then \
      EXISTING_GROUP=$(getent group "${USER_GID}" | cut -d: -f1); \
      echo "GID ${USER_GID} already exists as ${EXISTING_GROUP}"; \
      GROUP_NAME=${EXISTING_GROUP}; \
    else \
      groupadd -g "${USER_GID}" opencode; GROUP_NAME=opencode; \
    fi; \
    if getent passwd "${USER_UID}" >/dev/null 2>&1; then \
      EXISTING_USER=$(getent passwd "${USER_UID}" | cut -d: -f1); \
      echo "UID ${USER_UID} already exists as ${EXISTING_USER}"; \
      if [ "${EXISTING_USER}" = "opencode" ]; then \
        USER_NAME=opencode; \
      else \
        useradd -o -u "${USER_UID}" -g "${GROUP_NAME}" -s /bin/bash -m opencode || true; \
        USER_NAME=opencode; \
      fi; \
    else \
      useradd -m -u "${USER_UID}" -g "${GROUP_NAME}" -s /bin/bash opencode; USER_NAME=opencode; \
    fi; \
    mkdir -p /workspace /home/opencode/.config/opencode /home/opencode/.local/share/opencode /home/opencode/.local/state/opencode /home/opencode/.cache/opencode /home/opencode/.bun /home/opencode/.pnpm-store; \
    chown -R "${USER_UID}":"${USER_GID}" /home/opencode /workspace

# Allow passwordless sudo for convenience in sandbox
RUN echo "opencode ALL=(ALL) NOPASSWD:ALL" > /etc/sudoers.d/opencode && chmod 0440 /etc/sudoers.d/opencode

WORKDIR /workspace

# Simple entrypoint script
COPY entrypoint.sh /usr/local/bin/entrypoint.sh
RUN chmod +x /usr/local/bin/entrypoint.sh

# Switch to non-root user by default
USER opencode
ENV HOME=/home/opencode
ENV PATH="/home/opencode/.local/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"

ENTRYPOINT ["/usr/local/bin/entrypoint.sh"]
CMD ["bash"]
